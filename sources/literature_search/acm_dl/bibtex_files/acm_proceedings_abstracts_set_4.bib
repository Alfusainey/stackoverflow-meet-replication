@inproceedings{10.5555/1893268.1893277,
author = {Lurgi, Miguel and Robertson, David},
title = {Simple Ecological Rules Yield Complex Agent Networks},
year = {2010},
isbn = {9781607506423},
publisher = {IOS Press},
address = {NLD},
abstract = {In complex natural systems (such as ecological systems) it is common for those studying the macro-dynamics of systems to aim to describe, as simply as possible, the interactions between individuals occupying different niches in a system and to validate these by studying whether they account for the complex network of relationships observed in the actual system. We explore a similar principle applied to multi-agent systems: we develop interactions among intelligent agents; these interactions produce complex networks of relationships among the entities in the system in a similar fashion in which ecological networks are formed in nature. The study of the topological features displayed by these networks is helpful for determining the stability of the system of software agents and its relation to the complexity of the network itself. An interaction centred approach for coordination and knowledge sharing among artificial agents is adopted for the implementation of the system.},
booktitle = {Proceedings of the 2010 Conference on Artificial Intelligence Research and Development: Proceedings of the 13th International Conference of the Catalan Association for Artificial Intelligence},
pages = {39–48},
numpages = {10}
}

@inproceedings{10.5555/1884017.1884045,
author = {Yan, Fei and Zhang, Ming and Tang, Jian and Sun, Tao and Deng, Zhihong and Xiao, Long},
title = {Users' book-loan behaviors analysis and knowledge dependency mining},
year = {2010},
isbn = {3642142451},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
abstract = {Book-loan is the most important library service. Studying users' book-loan behavior patterns can help libraries to provide more proactive services. Based on users' book-loan history in a university library, we could build a book-borrowing network between users and books. Furthermore, users who borrow the same books are linked together. The users and links then form a co-borrowing network which can be regarded as a knowledge sharing network. Both the book-borrowing network and the co-borrowing network can be used to study users' bookloan behavior patterns. This paper presents a study in analyzing users' book-loan behaviors and mining knowledge dependency between schools and degrees in Peking University. The mining work is based on the book-borrowing network and its corresponding co-borrowing network. To the best of our knowledge, it is the first work to mine knowledge dependency in digital library domain.},
booktitle = {Proceedings of the 11th International Conference on Web-Age Information Management},
pages = {206–217},
numpages = {12},
location = {Jiuzhaigou, China},
series = {WAIM'10}
}

@inproceedings{10.1109/CISIS.2008.37,
author = {Esposito, Alessandra and Tarricone, Luciano and Vallone, Laura and Zappatore, Marco},
title = {A Proposal for an Electromagnetic Ontology Framework},
year = {2008},
isbn = {9780769531090},
publisher = {IEEE Computer Society},
address = {USA},
url = {https://doi.org/10.1109/CISIS.2008.37},
doi = {10.1109/CISIS.2008.37},
abstract = {Ontologies are more and more adopted to provide knowledge sharing and reuse, and to promote cooperation. Up to now they have been experienced in diverse areas ranging from medicine and biology to geography, astronomy and defence. Less has been made in the electromagnetic (EM) research area, where an increasing need of cooperation and resource sharing is emerging, and the range of potential semantic-based applications seems to be wide, thus rendering the implementation of a well structured ontology crucial. This paper presents a proposal for an EM ontology framework and describes the implementation of an ontology for aperture-antenna array design as specific example of practical application.},
booktitle = {Proceedings of the 2008 International Conference on Complex, Intelligent and Software Intensive Systems},
pages = {991–996},
