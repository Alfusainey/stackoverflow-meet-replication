@inproceedings{10.1145/2184751.2184786,
author = {Yao, Pengyan and Hu, Zheng and Zhao, Zhenzhen and Crespi, No\"{e}l},
title = {A study of social behavior in collaborative user generated services},
year = {2012},
isbn = {9781450311724},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2184751.2184786},
doi = {10.1145/2184751.2184786},
abstract = {User-generated content has become more and more popular. The success of collaborative content creation such as Wikipedia shows the level of user's accomplishments in knowledge sharing and socialization. In this paper we extend this research in the service domain, to explore users' social behavior in Collaborative User-Generated Services (Co-UGS). We create a model which is derived from a real social network with its behavior being similar to that of Co-UGS. The centrality approach of social network analysis is used to analyze Co-UGS simulation on this model. Three Co-UGS network actors are identified to distinguish users according to their reactions to a service, i.e. ignoring users, sharing users and co-creating users. Moreover, six hypotheses are proposed to keep the Co-UGS simulation. The results show that the Co-UGS network constructed by the sharing and co-creating users is a connected group superimposed on the basis of the social network of users. In addition, the feasibility of this simulation method is demonstrated along with the validity of applying social network analysis to the study of users' social behavior in Co-UGS.},
booktitle = {Proceedings of the 6th International Conference on Ubiquitous Information Management and Communication},
articleno = {28},
numpages = {6},
keywords = {user generated services, social network analysis, data mining, centrality},
location = {Kuala Lumpur, Malaysia},
series = {ICUIMC '12}
}

@inproceedings{10.1109/CISIS.2010.54,
author = {Capuano, Nicola and Gaeta, Matteo and Orciuoli, Francesco and Ritrovato, Pierluigi},
title = {Semantic Web Fostering Enterprise 2.0},
year = {2010},
isbn = {9780769539676},
publisher = {IEEE Computer Society},
