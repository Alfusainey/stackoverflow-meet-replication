pages = {97–104},
numpages = {8},
keywords = {situation, service, information retrieval, hybrid context model, context aware system, VANET},
location = {Paphos, Cyprus},
series = {DIVANet '12}
}

@inproceedings{10.1007/978-3-642-11747-3_9,
author = {Meland, Per H\r{a}kon and T\o{}ndel, Inger Anne and Jensen, Jostein},
title = {Idea: reusability of threat models – two approaches with an experimental evaluation},
year = {2010},
isbn = {3642117465},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-11747-3_9},
