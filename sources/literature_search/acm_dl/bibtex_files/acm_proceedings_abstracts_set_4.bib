@inproceedings{10.1145/2815833.2815848,
author = {Acosta, Maribel and Simperl, Elena and Fl\"{o}ck, Fabian and Vidal, Maria-Esther},
title = {HARE: A Hybrid SPARQL Engine to Enhance Query Answers via Crowdsourcing},
