keywords = {semantic enhancement, rdfa, linked data, federated markup},
location = {Hyderabad, India},
series = {WWW '11}
}

@inproceedings{10.1109/SNPD.2008.167,
author = {Liang, Ye and Bao, Hong and Liu, Hong-Zhe},
