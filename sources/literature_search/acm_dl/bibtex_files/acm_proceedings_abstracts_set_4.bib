@inproceedings{10.1109/HICSS.2008.340,
author = {Martin, Sebastian F. and Beimborn, Daniel and Parikh, Mihir A. and Weitzel, Tim},
title = {Organizational Readiness for Business Process Outsourcing: A Model of Determinants and Impact on Outsourcing Success},
year = {2008},
isbn = {0769530758},
publisher = {IEEE Computer Society},
address = {USA},
url = {https://doi.org/10.1109/HICSS.2008.340},
