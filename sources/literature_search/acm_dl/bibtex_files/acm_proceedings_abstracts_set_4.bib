pages = {3–12},
numpages = {10},
keywords = {incidents analysis, knowledge sharing, online discussion and promotion of discussion},
location = {San Diego, CA},
series = {OCSC '09}
}

@inproceedings{10.1109/EUROMICRO.2005.11,
