@inproceedings{10.5555/1793714.1793733,
author = {Magdaleno, Andr\'{e}a Magalh\~{a}es and Cappelli, Claudia and Baiao, Fernanda and Santoro, Flavia and De Araujo, Renata Mendes},
title = {A practical experience in designing business processes to improve collaboration},
year = {2007},
isbn = {3540782370},
publisher = {Springer-Verlag},
