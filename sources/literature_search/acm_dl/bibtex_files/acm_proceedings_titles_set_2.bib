@inproceedings{10.1109/ICCTD.2009.184,
author = {Amin, Aamir and Hassan, Mohd Fadzil and Ariffin, Mazeyanti Bt. and Rehman, Mobashar},
title = {Theoretical Framework of the Effect of Extrinsic Rewards on Individual's Attitude Towards Knowledge Sharing and the Role of Intrinsic Attributes},
year = {2009},
isbn = {9780769538921},
publisher = {IEEE Computer Society},
address = {USA},
url = {https://doi.org/10.1109/ICCTD.2009.184},
doi = {10.1109/ICCTD.2009.184},
abstract = {Importance of knowledge sharing in Knowledge Management can be denoted as a blood circulating in the body. Theory of Reasoned Action (TRA) is one of the social science theories which are vastly used to understand human behavior and is also considered as a strong base to understand knowledge sharing behavior. Hence this study will use the same theory to understand individual’s knowledge sharing behavior and specifically how extrinsic rewards can affect knowledge sharing attitude. Hence the objective of this study is to propose a framework of individual’s knowledge sharing attitude by using literature from different sources. The study will also propose five hypotheses based on the proposed framework. The study will examine (1) the effect of extrinsic rewards on knowledge sharing attitude (2) How demographic variables effect the relationship between extrinsic rewards and knowledge sharing attitude? (3) What is the effect of OCBs on the effect of extrinsic rewards on knowledge sharing attitude?(4) What is the impact of employee’s knowledge sharing attitude on his/her intention towards knowledge sharing? And (5) what is the impact of employee’s knowledge sharing intention on his knowledge sharing behavior? This will help us to understand how extrinsic motivation influence an individual’s knowledge sharing attitude and how his intrinsic attributes strengthen or weaken this relationship.},
booktitle = {Proceedings of the 2009 International Conference on Computer Technology and Development - Volume 02},
pages = {240–243},
numpages = {4},
keywords = {Organization Citizenship Behavior (OCB), Knowledge Sharing Attitude, Knowledge Sharing, Extrinsic Rewards, Demographic Variables},
series = {ICCTD '09}
}

@inproceedings{10.1109/ICEE.2010.1211,
author = {Yu-mei, Zhuang},
title = {The Function of Social Capital to the Growth of the Firm in Supply Chain - Perspective from Knowledge Acquisition and Knowledge Sharing},
year = {2010},
isbn = {9780769539973},
publisher = {IEEE Computer Society},
address = {USA},
url = {https://doi.org/10.1109/ICEE.2010.1211},
doi = {10.1109/ICEE.2010.1211},
abstract = {The growth of firm in the supply chain is very important when the supply chain adjusts dynamically so that achieving its own goal. Based on the knowledge resource theory, the base of the firm’s growth is the knowledge acquisition and integration. The social capital creates the conditions for the knowledge acquisition and sharing. The ties with the external organizations and internal firms of the supply chain create the external social capital and it conduces getting the external knowledge; the firm’s internal ties create the internal social capital and it aids knowledge sharing among the employees. The internal social capital facilitates the flowing and creation of the knowledge in the firm. The analysis to the growth of the firm from this perspective can help us understand the mechanism of the firm’s growth and establish the theoretical foundation for the construct of the firm’s social capital.},
booktitle = {Proceedings of the 2010 International Conference on E-Business and E-Government},
