@inproceedings{10.1145/3382494.3422165,
author = {Firouzi, Ehsan and Sami, Ashkan and Khomh, Foutse and Uddin, Gias},
title = {On the use of C# Unsafe Code Context: An Empirical Study of Stack Overflow},
year = {2020},
isbn = {9781450375801},
