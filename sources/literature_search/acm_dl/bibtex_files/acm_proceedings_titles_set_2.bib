author = {Shi, Bin and Hu, Yujie and Duan, Quanzhen and Han, Li and Ding, Yuemin},
title = {A Crowdsourcing-based Localization Scheme with Ultra-Wideband Communication},
year = {2020},
publisher = {IEEE Press},
url = {https://doi.org/10.1109/IECON43393.2020.9255352},
