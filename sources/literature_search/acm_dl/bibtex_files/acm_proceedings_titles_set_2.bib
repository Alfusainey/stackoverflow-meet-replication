}

@inproceedings{10.1109/INCOS.2010.73,
author = {Isaiadis, S. and Lee, V. and Snelling, D. and Lipton, P. and Vaught, J.},
title = {Symptoms Automation Framework for Cloud Business Alignment: A Collaborative and Responsive Architecture for Knowledge Sharing},
year = {2010},
