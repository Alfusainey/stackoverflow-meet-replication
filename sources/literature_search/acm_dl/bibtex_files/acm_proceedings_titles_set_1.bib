@inproceedings{10.1145/3344948.3344960,
author = {Brandner, Klaus and Mayer, Benjamin and Weinreich, Rainer},
title = {Software architecture knowledge sharing with the architecture knowledge base (AKB)},
year = {2019},
isbn = {9781450371421},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3344948.3344960},
