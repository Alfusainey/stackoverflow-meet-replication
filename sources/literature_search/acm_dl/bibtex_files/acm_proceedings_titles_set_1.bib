articleno = {34},
numpages = {8},
keywords = {E-Government Portal, K-ACT Model, Knowledge management},
location = {Hagen, Germany},
series = {KMO '16}
}

@inproceedings{10.1007/978-3-030-34872-4_36,
author = {Kundu, Dipankar and Pal, Rajat Kumar and Mandal, Deba Prasad},
title = {Finding Active Experts for Question Routing in Community Question Answering Services},
