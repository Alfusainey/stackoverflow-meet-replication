pages = {853–865},
numpages = {13},
keywords = {Activity-selection, Q&amp;A, Role-playing, Triggering, StackExchange},
location = {Da Nang, Vietnam}
}

@inproceedings{10.1007/978-3-319-70139-4_73,
author = {Liu, Zhu and Li, Kan and Qu, Dacheng},
