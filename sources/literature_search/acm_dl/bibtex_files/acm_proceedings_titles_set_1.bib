series = {CSCW '14}
}

@inproceedings{10.5555/3201607.3201613,
author = {Tian, Zhongyuan and Wang, Zhe and Li, Haoran and Yang, Peng and Maeda, Rafael Kioji Vivas and Xu, Jiang},
title = {Multi-device collaborative management through knowledge sharing},
year = {2018},
