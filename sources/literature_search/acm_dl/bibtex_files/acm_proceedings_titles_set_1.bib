pages = {80–86},
numpages = {7},
keywords = {LDA, Stack Overflow, classifier, recommender system},
location = {Chongqing, China},
series = {ChineseCSCW '17}
}

@inproceedings{10.1109/ASWEC.2014.39,
author = {Ali, Abdussalam and Hawryszkiewycz, Igor and Chen, Jinjun},
title = {Services for Knowledge Sharing in Dynamic Business Networks},
year = {2014},
isbn = {9781479931491},
publisher = {IEEE Computer Society},
address = {USA},
url = {https://doi.org/10.1109/ASWEC.2014.39},
doi = {10.1109/ASWEC.2014.39},
abstract = {Knowledge sharing and management is becoming increasingly important in complex environments. Such complex environments often involve business networks in joint projects or supply chains. The increasingly complexity characterized by continuous change requires knowledge workers to continually propose new solutions and search and develop knowledge to support these solutions. This new knowledge often comes from externally, or from business partners and must be shared in flexible ways. This paper develops a model to model flexible gathering and sharing of knowledge. It develops a metamodel that allows dynamic reconfiguration of systems, while reassigning knowledge processing functions to meet emerging needs. The paper then illustrates a prototype for implementing the model on the cloud.},
booktitle = {Proceedings of the 2014 23rd Australian Software Engineering Conference},
pages = {62–65},
numpages = {4},
keywords = {business, complex environment, knowledge management, networks},
